<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/aboutview"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:gravity="center"
              android:orientation="vertical">

    <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="1.0"
            android:gravity="center"
            android:padding="20dp">

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left">

                <TextView
                        style="@style/Wftext.header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:text="@string/app_name"
                        android:id="@+id/textView"/>

                <TextView
                        style="@style/Wftext"
                        android:id="@+id/version"
                        android:layout_width="wrap_content"
                        android:paddingTop="5dp"
                        android:text="@string/error"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"/>
            </LinearLayout>

            <TextView
                    style="@style/Wftext"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dip"
                    android:text="@string/copyright"/>

            <TextView
                    style="@style/Wftext"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dip"
                    android:text="@string/gpl_part_1"/>

            <TextView
                    style="@style/Wftext"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dip"
                    android:text="@string/gpl_part_2"/>

            <TextView
                    style="@style/Wftext"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:paddingTop="5dip"
                    android:text="@string/gpl_part_3"/>

            <TextView
                    style="@style/Wftext.large"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dip"
                    android:text="@string/promo"/>


            <TextView
                    style="@style/Wftext.header"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dip"
                    android:text="@string/pleaseread"/>

            <TextView
                    style="@style/Wftext.header"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dip"
                    android:text="@string/notpossible"/>

            <TextView
                    style="@style/Wftext.header"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="web|email"
                    android:paddingTop="10dip"
                    android:text="@string/feedback"
                    />

            <TextView
                    style="@style/Wftext"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="web|email"
                    android:text="@string/email"
                    android:paddingTop="5dip"
                    />

            <TextView
                    style="@style/Wftext.large"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="web|email"
                    android:paddingTop="10dip"
                    android:text="@string/visitcommunity"
                    />

            <TextView
                    style="@style/Wftext"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="web|email"
                    android:paddingTop="5dip"
                    android:text="@string/communityURI"

                    />

            <TextView
                    style="@style/Wftext.large"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dip"
                    android:text="@string/opensource"/>

            <TextView
                    style="@style/Wftext.header"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:paddingTop="10dip"
                    android:text="@string/visitgit"/>

            <TextView
                    style="@style/Wftext"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:paddingTop="10dip"
                    android:text="@string/gitURI"/>

            <TextView
                    style="@style/Wftext.large"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dip"
                    android:text="@string/privacy_header"/>

            <TextView
                    style="@style/Wftext.header"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dip"
                    android:text="@string/privacy_part_1"/>


            <TextView
                    style="@style/Wftext.header"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dip"
                    android:text="@string/privacy_part_2"/>

            <TextView
                    style="@style/Wftext.header"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dip"
                    android:text="@string/privacy_part_3"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>